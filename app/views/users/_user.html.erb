<li class = "user_info">
  <%= gravatar_for(user, size: 50) %>
  <%= link_to user.name, user %>
  <% if current_user.is_admin_user? %>
    <span>
      | <%= link_to "Delete", admin_user_path(user), method: :delete,
                                      data: {confirm: "You sure?"} %>
    </span>
  <% end %>
</li>