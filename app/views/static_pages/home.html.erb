<% provide title: "Home" %>

<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <div class="gravatar">
          <%= gravatar_for current_user %>
        </div>
        <div class="user-name-div">
          <span class="user-name"><%= current_user.name %></span>
        </div>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>
    <aside class="col-md-8">
      <% if @feed.any? %>
        <ol class="list-activities">
          <%= render @feed %>
          <%= will_paginate @feed %>
        </ol>
      <% end %>
    </aside>
  </div>
<% else %>
  <h1>Home</h1>
<% end %>
