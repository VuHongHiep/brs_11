<li class="request-show">
  <div class="request-title-div">
    <span class="request-title">
      <%= link_to request.title, user_request_path(@user, request) %>
      <%= "(#{request.solve})" %>
    </span>
  </div>
  <div class="request-cancel-div">
    <span class="request-cancel">
      <%= link_to "Cancel", user_request_path(@user, request), method: :delete, data: {confirm: "Are you sure?"} %>
    </span>
  </div>
  <div class="request-content-div">
    <span class="request-content">
      <%= request.content %>
    </span>
  </div>
</li>