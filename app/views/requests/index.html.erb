<% provide :title, "Requests of #{@user.name}" %>

<div class="row">
  <aside class="col-md-4">
    <%= render 'shared/user_info' %>
  </aside>
  <aside class="col-md-8">
    <div class="create-request-link-div">
      <%= link_to "Create new request", new_user_request_path(@user) %>
    </div>
    <div class="list-requests-div">
      <% if @requests.any? %>
        <h2>Requests</h2>
        <ol class="requests">
          <%= render @requests, user: @user %>
          <%= will_paginate @requests %>
        </ol>
      <% end %>
    </div>
  </aside>
</div>